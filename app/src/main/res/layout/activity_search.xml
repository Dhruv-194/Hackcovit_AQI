<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:background="#A3CB37">

    <EditText
        android:id="@+id/searchtxt"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:gravity="center"
        android:hint="Search Here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.337"></EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="336dp"
        android:layout_height="151dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/francois_one"
        android:text="Search any Country or City"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="209dp"
        android:layout_height="74dp"
        android:text="AQI Level ="
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchtxt"
        app:layout_constraintVertical_bias="0.312" />

    <TextView
        android:id="@+id/txtaqi"
        android:layout_width="164dp"
        android:layout_height="54dp"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/searchtxt"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/search"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:drawableStart="@drawable/ic_search_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.315" />

    <Button
        android:id="@+id/bu3"
        android:layout_width="185dp"
        android:layout_height="84dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/custombt"
        android:fontFamily="@font/boogaloo"
        android:text="Bar Graphs"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ct"
        app:layout_constraintVertical_bias="0.631" />

</androidx.constraintlayout.widget.ConstraintLayout>